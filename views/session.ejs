<div class="row">
  <div class="col-xs-6 ">
    <h1>Login</h1>

    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <% if (JSON.stringify(query) !== "{}") { %>
          <input type="hidden" class="favoriteId" name="saved" value=<%= query.favoriteId.toString() %>>
        <% } %>
        <button type="submit" class="btn btn-info btn-lg">Login</button>
    </form>
    <hr>

    <% if (JSON.stringify(query) !== "{}") { %>
      <form action="/auth/facebook?saved=<%=query.favoriteId.toString()%>" method="post">
    <% } else {%>
      <form action="/auth/facebook" method="post">
    <% } %>

      <% if (JSON.stringify(query) !== "{}") { %>
        <input type="hidden" class="favoriteId" name="saved" value=<%= query.favoriteId.toString() %>>
      <% } %>
      <button type="submit" id="facebook-login" class="btn btn-primary btn-lg">Facebook</button>
    </form>


  </div>
  <div class="col-xs-6">
    <h1>Sign Up</h1>
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <% if (JSON.stringify(query) !== "{}") { %>
          <input type="hidden" class="favoriteId" name="saved" value=<%= query.favoriteId.toString() %>>
        <% } %>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>


  </div>

</div>
<script>
$('#facebook-login').on('click', function(){
      $('#temp-entry-holder').text('HEY')
})
</script>
